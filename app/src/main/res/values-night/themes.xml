<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TugasInteroperabilitas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primaryTextWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/colorGray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textPrimary" parent="@android:style/Theme.Black">
        <item name="android:textColor">@color/primaryTextWhite</item>
    </style>

    <style name="textSecondary" parent="@android:style/Theme.Black">
        <item name="android:textColor">@color/secondaryTextWhite</item>
    </style>

    <style name="main_background" parent="@android:style/Theme.Black">
        <item name="android:background">@color/primaryTextBlack</item>
    </style>

    <style name="main_background_tint" parent="@android:style/Theme.Black">
        <item name="android:backgroundTint">@color/primaryTextBlack</item>
    </style>

    <style name="secondary_background" parent="@android:style/Theme.Black">
        <item name="android:background">#232323</item>
    </style>
</resources>